<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/colorMainAction"/>
      <stroke android:color="@color/colorMain" android:width="1dp"/>
      <corners
          android:radius="@dimen/CornersButton" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="@color/colorMainActionLight" />
      <stroke android:color="@color/colorMain" android:width="1dp"/>
      <corners
          android:radius="@dimen/CornersButton" />
      <padding
          android:left="16dp"
          android:top="10dp"
          android:right="16dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>

